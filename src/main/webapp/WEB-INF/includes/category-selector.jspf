<%@ page import="java.util.List" %>
<%@ page import="it.unisa.tsw_proj.model.bean.CategoryBean" %>
<%@ page import="it.unisa.tsw_proj.model.dao.CategoryDAO" %>

<% List<CategoryBean> cat = CategoryDAO.doGetAllCategories(); %>

<label for="category"><%= langBundle.getString("categorySel.category") %></label>
<select name="category" id="category">
    <% for (CategoryBean c : cat) { %>
    <option value="<%= c.getId() %>"><%= c.getName() %></option>
    <% } %>
</select>